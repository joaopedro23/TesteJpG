@page
@model APPJPG.Pages.Client.CreatedModel
@{
}
<br>
<h2>Novo Cliente</h2>
@if (Model.erroMessage.Length > 0)
{
    <div class="alert-warning alert-dismiddible fade show" role="alert">
        <strong>@Model.erroMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nome</label>
         <div class="col-sm-6">
              <input type="text" class="form-control" name="name" value="@Model.clientInfo.name">
         </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.clientInfo.email">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Data Nascimento </label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="dataNacimento" value="@Model.clientInfo.dataNacimento">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Renda</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="renda" value="@Model.clientInfo.renda">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">CPF</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="cpf" value="@Model.clientInfo.cpf">
        </div>
    </div>
    @if (@Model.succesoMenssagen.Length > 0)
    {
        <div class="roe mb-3">
            <div class="col-sm-9">
                <div class="alert-seccess alert-dismissible fade show" role="alert">
                    <strong>@Model.succesoMenssagen</strong>
                     <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>             
                </div>
            </div>
        </div>   
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-ptimary" href="/" role="button">Cancela</a>
        </div>
    </div>
   
</form>